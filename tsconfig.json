{
  "include": [
    "src/**/*.d.ts",
    "src/**/*.ts",
    "src/**/*.vue",
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.spec.ts"
  ],
  "compilerOptions": {
    "composite": true,
    "outDir": "./dist/lib",
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"],
    },
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "allowJs": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "types": [
      "vite/client",
      "vue-router",
      "node",
      "unocss",
    ],
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true
  },
}
